{
  "name": "claude-spend",
  "version": "1.0.0",
  "description": "See where your Claude Code tokens go. One command, zero setup.",
  "main": "dist/index.js",
  "bin": {
    "claude-spend": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx cp -r src/public dist/public",
    "start": "node dist/index.js",
    "dev": "npm run build && node dist/index.js",
    "dev:no-open": "npm run build && node dist/index.js --no-open",
    "watch": "nodemon",
    "clean": "shx rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "tokens",
    "usage",
    "analytics",
    "dashboard",
    "spend",
    "cost"
  ],
  "author": "Aniket Parihar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/writetoaniketparihar-collab/claude-spend.git"
  },
  "dependencies": {
    "express": "^4.21.0",
    "open": "^10.1.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/node": "^25.3.0",
    "nodemon": "^3.1.14",
    "shx": "^0.4.0",
    "typescript": "^5.9.3"
  }
}
